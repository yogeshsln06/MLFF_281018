@using System.Data
@model DataTable

<script src="~/scripts/jquery.dataTables.min.js"></script>
<script src="~/scripts/dataTables.bootstrap.min.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.4/css/jquery.dataTables.min.css">

<script type="text/javascript">
    $(document).ready(function () {
        $('#tableCustomerTranascationHistory').dataTable({
            "paging": true,
            "ordering": false,
            "info": true,
            "searching": true
        });
    });
</script>
<style>
    .well {
        min-height: 20px;
        padding: 5px;
        background-color: #f5f5f5;
        border: 1px solid #e3e3e3;
        border-radius: 4px;
        -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .05);
        box-shadow: inset 0 1px 1px rgba(0, 0, 0, .05);
    }

    .panel-default > .panel-heading {
        color: #fff;
        font-weight: bold;
        background-color: #40b2cd;
        border-color: #40b2cd;
        text-decoration: none;
    }

    a:hover {
        text-decoration: none;
    }

    a:active {
        text-decoration: none;
    }
   
</style>



@{ int rowNo = 0; }
<table id="tableCustomerTranascationHistory" class="table table-condensed table-striped table-hover">
    <thead>
        <tr>
            <th style="width: 60px;">
                No.
            </th>
            <th style="width: 60px;">
                Date Time
            </th>
            <th style="width: 60px;">
                Amount
            </th>
            <th style="width: 60px;">
                TRANSACTION TYPE
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (DataRow item in Model.Rows)
            {
                <tr>
                    <td>
                        @(rowNo += 1)

                    </td>
                    <td>
                        @item["CREATION_DATE"].ToString()
                    </td>
                    <td>
                        @item["AMOUNT"].ToString()
                    </td>
                    <td>
                        @item["TRANSACTION_TYPE"].ToString()
                    </td>
                </tr>

        }
    </tbody>
</table>

