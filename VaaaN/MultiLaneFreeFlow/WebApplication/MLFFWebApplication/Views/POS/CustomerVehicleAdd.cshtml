@model VaaaN.MLFF.Libraries.CommonLibrary.CBE.CustomerVehicleCBE
@{
    ViewBag.Title = "Add Customer Vehicle";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {
       
        $("#buttonUserBack").click(function () {
            // Back to User List
            location.href = "@Url.Action("CustomerVehicleList", "POS")";
        });
    });

</script>
<style>
    table.table {
        table-layout: auto;
        width: 100%;
    }

    .glyphicon-ok {
        display: inline;
        margin-right: 12px;
        margin-top: 23px;
        color: green;
    }

    .glyphicon-remove {
        display: inline;
        margin-right: 12px;
        margin-top: 25px;
        color: red;
    }
    input.notFound{background:#d9534f;color:white;}
</style>
<script src="~/js/CustomerVehicle.js"></script>
<div class="grid-container">
    <div class="panel panel-info">
        <div class="panel-heading" style="background-color:rgb(64, 178, 205);">
            <h1 class="panel-title new-title">New Customer Vehicle</h1>

        </div>
        <div class="panel-body">
            @using (Html.BeginForm("CustomerVehicleAdd", "POS", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <input type="hidden" id="hfVehicleImageFront" value="" />
                <input type="hidden" id="hfVehicleImageRear" value="" />
                    <input type="hidden" id="hfVehicleImageLeftSide" value="" />
                    <input type="hidden" id="hfVehicleImageRightSide" value="" />
                <div class="row">
                    <form role="form">
                        <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-4">
                            <label for="FirstName" class="form-label required">@VaaaN.MLFF.Libraries.CommonLibrary.Resource.Resourceen.FirstName</label>
                            @Html.DropDownList("AccountId", (IEnumerable<SelectListItem>)ViewBag.customerclassList, new { @class = "form-control" })
                            @Html.Editor("FirstName", new { htmlAttributes = new { @class = "form-control", placeholder = "First Name" } })
                            <span class="form-control-feedback glyphicon glyphicon-remove" id="spnTick"></span>
                        </div>
                        <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-4">
                            <label for="LastName" class="form-label">@VaaaN.MLFF.Libraries.CommonLibrary.Resource.Resourceen.LastName</label>
                            @Html.Editor("LastName", new { htmlAttributes = new { @class = "form-control", placeholder = "Last Name", @readonly = true } })
                        </div>
                        <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-4">
                            <label for="AccountId" class="form-label">@VaaaN.MLFF.Libraries.CommonLibrary.Resource.Resourceen.SearchCustomer</label>

                            <button type="button" class="form-control btn btn-primary btn-sm" onclick="btnSearchUser()" id="searchCust">Find Customer</button>
                        </div>
                        <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-4">
                            <label for="VehRegNo" class="form-label required">@VaaaN.MLFF.Libraries.CommonLibrary.Resource.Resourceen.VehicleRegNo</label>
                            @Html.EditorFor(model => model.VehRegNo, new { htmlAttributes = new { @maxlength = "9", @class = "form-control", placeholder = "Vehicle Reg No", onkeydown = "GetTagId();" } })
                        </div>
                        <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-4">
                            <label for="VehicleClassId" class="form-label required">@VaaaN.MLFF.Libraries.CommonLibrary.Resource.Resourceen.VehicleClass</label>
                            @Html.DropDownList("VehicleClassId", (IEnumerable<SelectListItem>)ViewBag.vehicleclassList, new { @class = "form-control", onchange = "GetTagId();" })
                        </div>
                        <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-4">
                            <label for="TagId" class="form-label required">@VaaaN.MLFF.Libraries.CommonLibrary.Resource.Resourceen.TagId</label>
                            @Html.EditorFor(model => model.TagId, new { htmlAttributes = new { @class = "form-control", placeholder = "Vehicle Tag Id" } })
                        </div>
                        <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-4">
                            <label for="VehicleRegistrationCerticateId" class="form-label required">Vehicle Certificate Id</label>
                            @Html.EditorFor(model => model.VehicleRegistrationCerticateId, new { htmlAttributes = new { @class = "form-control", placeholder = "Vehicle Registration Certification Id" } })
                        </div>
                        <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-4">
                            <label for="Address" class="form-label required">Address</label>
                            @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", placeholder = "Address" } })
                        </div>
                        <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-4">
                            <label for="brand" class="form-label required">Brand</label>
                            @Html.DropDownList("Brand", (IEnumerable<SelectListItem>)ViewBag.brandName, new { @class = "form-control", placeholder = "Brand" })
                                              </div>
                        <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-4">
                            <label for="VehicleType" class="form-label required">Vehicle Type</label>
                            @Html.DropDownList("VehicleType", (IEnumerable<SelectListItem>)ViewBag.typeName, new { @class = "form-control", placeholder = "Vehicle Type" })
                           
                        </div>
                        <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-4">
                            <label for="VehicleCategory" class="form-label required">Vehicle Category</label>
                            @Html.DropDownList("VehicleCategory", (IEnumerable<SelectListItem>)ViewBag.categoryName, new { @class = "form-control", placeholder = "Vehicle Category" })
                         
                        </div>
                        <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-4">
                            <label for="FuelType" class="form-label required">Fuel Type</label>
                            @Html.DropDownList("FuelType", (IEnumerable<SelectListItem>)ViewBag.fuelTypeName, new { @class = "form-control", placeholder = "Fuel Type" })
                          
                        </div>
                        <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-4">
                            <label for="ModelNo" class="form-label required">Model No</label>
                            @Html.EditorFor(model => model.ModelNo, new { htmlAttributes = new { @class = "form-control", placeholder = "Model No" } })
                        </div>
                        <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-4">
                            <label for="ManufacturingYear" class="form-label required">Manufacturing Year</label>
                            @Html.EditorFor(model => model.ManufacturingYear, new { htmlAttributes = new { @class = "form-control", placeholder = "Manufacturing Year" } })
                        </div>
                        <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-4">
                            <label for="CyclinderCapacity" class="form-label required">Cyclinder Capacity</label>
                            @Html.EditorFor(model => model.CyclinderCapacity, new { htmlAttributes = new { @class = "form-control", placeholder = "Cyclinder Capacity" } })
                        </div>
                        <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-4">
                            <label for="FrameNumber" class="form-label required">Frame Number</label>
                            @Html.EditorFor(model => model.FrameNumber, new { htmlAttributes = new { @class = "form-control", placeholder = "Frame Number" } })
                        </div>
                        <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-4">
                            <label for="EngineNumber" class="form-label required">Engine Number</label>
                            @Html.EditorFor(model => model.EngineNumber, new { htmlAttributes = new { @class = "form-control", placeholder = "Engine Number" } })
                        </div>
                        <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-4">
                            <label for="VehicleColor" class="form-label required">Vehicle Color</label>
                            @Html.DropDownList("VehicleColor", (IEnumerable<SelectListItem>)ViewBag.vehicleColorName, new { @class = "form-control", placeholder = "Vehicle Color" })
                         
                        </div>
                        <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-4">
                            <label for="LicencePlateColor" class="form-label required">Licence Plate Color</label>
                            @Html.DropDownList("LicencePlateColor", (IEnumerable<SelectListItem>)ViewBag.licencePlateColorName, new { @class = "form-control", placeholder = "Licence Plate Color" })
                           
                        </div>
                        <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-4">
                            <label for="RegistrationYear" class="form-label required">Registration Year</label>
                            @Html.EditorFor(model => model.RegistrationYear, new { htmlAttributes = new { @class = "form-control", placeholder = "Registration Year" } })
                        </div>
                        <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-4">
                            <label for="LocationCode" class="form-label required">Location Code</label>
                            @Html.EditorFor(model => model.LocationCode, new { htmlAttributes = new { @class = "form-control", placeholder = "LocationCode" } })
                        </div>
                        <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-4">
                            <label for="VehicleImageFront" class="form-label required">Front Image</label>
                            <input name="FrontImage" id="FrontImage" type="file"  accept="image/x-png,image/gif,image/jpeg" />
                            @*@Html.EditorFor(model => model.VehicleImageFront, new { htmlAttributes = new { @class = "form-control", placeholder = "Vehicle Front Image" } })*@
                        </div>
                        <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-4">
                            <label for="VehicleImageRear" class="form-label required" >Rear Image</label>
                            <input name="RearImage" id="RearImage" type="file"  accept="image/x-png,image/gif,image/jpeg" />
                            @*@Html.EditorFor(model => model.VehicleImageRear, new { htmlAttributes = new { @class = "form-control", placeholder = "Vehicle Rear Image" } })*@
                        </div>
                        <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-4">
                            <label for="VehicleImageRightSide" class="form-label required">Right Side Image</label>
                            <input name="RightSideImage" id="RightSideImage" type="file" accept="image/x-png,image/gif,image/jpeg "/>
                            @*@Html.EditorFor(model => model.VehicleImageRightSide, new { htmlAttributes = new { @class = "form-control", placeholder = "Vehicle Right Side Image" } })*@
                        </div>
                        <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-4">
                            <label for="VehicleImageLeftSide" class="form-label required">Left Side Image</label>
                            <input name="LeftSideImage" id="LeftSideImage" type="file" accept="image/x-png,image/gif,image/jpeg" />
                             @*@Html.EditorFor(model => model.VehicleImageLeftSide, new { htmlAttributes = new { @class = "form-control", placeholder = "Vehicle Left Side Image" } })*@
                        </div>
                        <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-4">
                            <label for="ValidUntil" class="form-label required">Valid Until</label>
                            @Html.EditorFor(model => model.ValidUntil, new { htmlAttributes = new { @class = "form-control", placeholder = "Valid Until" } })
                        </div>
                        <div class="clearfix"></div>
                        <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-4" style="float:right">
                            <span id="lblErrors" style="color:red;"></span>

                            @if (TempData["Message"] != null && TempData["Message"].ToString() != "")
                            {
                                <span style="color:red;">@TempData["Message"]!</span>

                            }
                        </div>
                        <div class="clearfix"></div>
                        <div class="col-xs-10 col-sm-4 col-md-4 col-lg-4">
                            <button type="submit" class="btn btn-primary" onclick="return Validation();">Submit</button>&nbsp;&nbsp;<button id="buttonUserBack" type="button" class="btn btn-primary">Back</button>
                        </div>
                    </form>
                    <div class="clearfix"></div>
                </div>
            }
        </div>

    </div>

</div>
<div class="modal fade" tabindex="-1" id="SearchUserModal"
     data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" onclick="HideModel()">
                    ×
                </button>
                <h4 class="modal-title">Select Users</h4>
            </div>
            <div class="form-group form-group-sm" style="padding:4px">
                <input type="text" class="form-control" id="inputToSearch" placeholder="Search..." />
            </div>
            <div class="modal-body" style="padding:0px">
               
                <table id="tableCustomerList" class="table table-condensed table-striped table-hover">
                    <thead>
                        <tr>
                            <th>
                                No.
                            </th>
                            <th style='text-align:left'>
                                First Name
                            </th>
                            <th style='text-align:left'>
                                Last Name
                            </th>
                            <th>
                                eKTP
                            </th>
                            <th>
                                Mobile No.
                            </th>
                            <th style='text-align:left'>
                                Email Id
                            </th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
