@model VaaaN.MLFF.Libraries.CommonLibrary.CBE.CustomerVehicleCBE
@{
    ViewBag.Title = "Add Customer Tag";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<style type="text/css">
    input[type='number'] {
        -moz-appearance: textfield;
    }
    /* Webkit browsers like Safari and Chrome */
    input[type=number]::-webkit-inner-spin-button,
    input[type=number]::-webkit-outer-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }
</style>
@using (Html.BeginForm("AddCustomerTag", "POS", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="panel panel-info">
        <div class="panel-heading" style="background-color:rgb(64, 178, 205);">
            <h1 class="panel-title new-title">New Tag Registration</h1>
        </div>
        <div class="panel-body">
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.VehicleClassId, htmlAttributes: new { @class = "control-label col-md-2 required" })
                    <div class="col-md-4">
                        @Html.DropDownList("ddlVehicleClass", (IEnumerable<SelectListItem>)ViewBag.VehicleClass, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.VehicleClassId, "", new { @class = "text-danger" })
                    </div>
                    @Html.LabelFor(model => model.VehRegNo, htmlAttributes: new { @class = "control-label col-md-2 required" })
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.VehRegNo, new { htmlAttributes = new { @class = "form-control " } })
                        @Html.ValidationMessageFor(model => model.VehRegNo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.TagId, htmlAttributes: new { @class = "control-label col-md-2 required" })
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.TagId, new { htmlAttributes = new { @class = "form-control ", autofocus = "true" } })
                        @Html.ValidationMessageFor(model => model.TagId, "", new { @class = "text-danger" })
                    </div>
                    @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "control-label col-md-2 required" })
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control ", autofocus = "true" } })
                        @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group"><span id="lblErrors" style="color:red;float:right">@TempData["lblerror"]</span>
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                        &nbsp;&nbsp;@Html.ActionLink("Back", "TagSaleList", "POS",new {id = ViewBag.AccountId }, new { @class = "btn btn-primary" })
                    </div>
                </div>
            </div>
        </div>
    </div>
}
