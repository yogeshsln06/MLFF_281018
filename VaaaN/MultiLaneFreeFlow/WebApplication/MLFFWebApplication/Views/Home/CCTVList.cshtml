@model IEnumerable<VaaaN.ATMS.Libraries.CommonLibrary.CBE.CctvCBE>

@{
    ViewBag.Title = "Camera List";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<script src="~/scripts/jquery.dataTables.min.js"></script>
<script src="~/scripts/dataTables.bootstrap.min.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.4/css/jquery.dataTables.min.css">

<script type="text/javascript">
    $(document).ready(function () {
        $('#tableCCTV').dataTable({
            "paging": true,
            "ordering": true,
            "info": true,
            "searching": false
        });
    });
</script>
    <style type="text/css">
       #tableCCTV .sorting{
           background:none;
       } 

    </style>

<div class="panel panel-info">
    <div class="panel-heading " style="background-color:rgb(64, 178, 205);">

        <div class="panel-title new-title">
            Camera List
        </div>

    </div>
    <table id="tableCCTV" class="table table-condensed table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Control_Room_Name)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.CameraName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Chainage)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsInstalled)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Direction)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Make)
                </th>


                <th>
                    @Html.DisplayNameFor(model => model.NextServiceDate)
                </th>

            
                
                <th>
                    Edit
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Control_Room_Name)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.CameraName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Chainage)
                    </td>
                    <td>
                        @(item.IsInstalled==1?"Yes":"No")
                    </td>
                    <td>
                        @(item.Direction == "1" ? "Up" : "Down")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Make)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.NextServiceDate)
                    </td>

                

                    <td>
                        @Html.ActionLink("Edit", "EditCctv", new {  id=item.CameraId  })

                    </td>
                </tr>

            }
        </tbody>
    </table>
    <p style="padding-top:15px;">
        <a href="~/Home/AddCctv" class="btn btn-primary"><i class="fa fa-plus-circle"></i><span> New CCTV</span></a>

    </p>
</div>
