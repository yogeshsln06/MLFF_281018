@model IEnumerable<VaaaN.ATMS.Libraries.CommonLibrary.CBE.AtccCBE>

@{
    ViewBag.Title = "Atcc List";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<script src="~/scripts/jquery.dataTables.min.js"></script>
<script src="~/scripts/dataTables.bootstrap.min.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.4/css/jquery.dataTables.min.css">

<script type="text/javascript">
    $(document).ready(function () {
        $('#tableATCC').dataTable({
            "paging": true,
            "ordering": true,
            "info": true,
            "searching": false
        });
    });
</script>


<div class="panel panel-info">
    <div class="panel-heading " style="background-color:rgb(64, 178, 205);">

        <div class="panel-title new-title">
            ATCC List
        </div>

    </div>
    <table id="tableATCC" class="table table-condensed table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ControlRoom_Name)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.AtccName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Chainage)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsInstalled)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Direction)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Make)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NextServiceDate)
                </th>
                <th>
                    Edit
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.ControlRoom_Name)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.AtccName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Chainage)
                    </td>
                    <td>
                        @(item.IsInstalled == 1 ? "Yes" : "No")
                    </td>
                    <td>
                        @(item.Direction=="1"?"Up":"Down")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Make)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.NextServiceDate)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "EditAtcc", new {  id=item.AtccId  })

                    </td>
                </tr>

            }
        </tbody>
    </table>
    <p style="padding-top:15px;">
        <a href="~/Home/AddAtcc" class="btn btn-primary"><i class="fa fa-plus-circle"></i><span> New ATCC</span></a>

    </p>
</div>
