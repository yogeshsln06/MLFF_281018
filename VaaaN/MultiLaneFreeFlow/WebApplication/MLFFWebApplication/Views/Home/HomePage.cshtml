
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_LayoutHomePage.cshtml";
}

<div class="panel panel-info col-sm-6 col-sm-offset-3" style="padding-left:0px;padding-right:0px">
    <div class="panel-heading" style="background-color:rgb(46, 109, 164);">
        <h1 class="panel-title new-title">Login</h1>
    </div>
    <div class="panel-body panel-body col-sm-8 col-sm-offset-2">
        <div class="col-sm-12">
            <div class="form-horizontal">
                <div class="form-group">
                    <label for="txtUserName" class="form-label">Username</label>
                    <input class="form-control" id="txtUserName" placeholder="Username" autofocus />
                </div>
                <div class="form-group">
                    <label for="txtPassword" class="form-label">Password</label>
                    <input type="password" class="form-control" id="txtPassword" placeholder="Password" />
                </div>
                <a href="/home/forgotpassword"><h4 class="text-center">Forgot Password?</h4></a>
                <div class="form-group text-center">
                    <button class="btn  btn-primary" name="buttonLogin" id="buttonLogin">LOGIN</button>
                </div>
                <div class="row">
                    <div class="col-md-12 col-sm-12 text-left">
                        <span id="errormsg" style="color:red; font-weight:bold;"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


