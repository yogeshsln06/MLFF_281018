@model VaaaN.MLFF.Libraries.CommonLibrary.CBE.PlazaCBE
@{
    ViewBag.Title = "Add Plaza";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {
        $('.prev i').removeClass();
        $('.prev i').addClass("fa fa-chevron-left");

        $('.next i').removeClass();

        $('.next i').addClass("fa fa-chevron-right");
        $('#module_2').css({ "background-color": "#00B4CE" });
        $('#module_2').css({ "font-weight": "bold" });
        $('#submodule_4').css({ "background-color": "#00B2aa" });
        $('#submodule_4').css({ "font-weight": "bold" });

        $("#buttonUserBack").click(function () {
            // Back to User List
            location.href = "@Url.Action("PlazaList", "Home")";

        });
    });

    function Validation() {
        if (!validatePlaza()) {
            return false;
        }
        return true;
    }
    function isNumberKey(evt) {
        var charCode = (evt.which) ? evt.which : event.keyCode;
        if (charCode != 46 && charCode > 31
          && (charCode < 48 || charCode > 57))
            return false;

        return true;
    }



    function validateAlpha() {
        var textInput = document.getElementById("FirstName").value;
        textInput = textInput.replace(/[^A-Za-z]/g, "");
        document.getElementById("FirstName").value = textInput;

    }
    function validateLastname() {
        var textInput2 = document.getElementById("LastName").value;
        textInput2 = textInput2.replace(/[^A-Za-z]/g, "");
        document.getElementById("LastName").value = textInput2;
    }
</script>
<script src="~/js/userValidation.js"></script>

<div class="grid-container">
    <div class="panel panel-info">
        <div class="panel-heading" style="background-color:rgb(64, 178, 205);">
            <h1 class="panel-title new-title">New Gantry</h1>

        </div>
        <div class="panel-body">
            @using (Html.BeginForm("PlazaAdd", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="row">
                    <form role="form">
                        <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-4">
                            <label for="PlazaName" class="form-label required">@VaaaN.MLFF.Libraries.CommonLibrary.Resource.Resourceen.GantryName</label>
                            @Html.EditorFor(model => model.PlazaName, new { htmlAttributes = new { @class = "form-control", placeholder = "Gantry Name", autofocus = "true" } })
                        </div>
                        <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-4">
                            <label for="Location" class="form-label required">Gantry @VaaaN.MLFF.Libraries.CommonLibrary.Resource.Resourceen.Location</label>
                            @Html.EditorFor(model => model.Location, new { htmlAttributes = new { @class = "form-control", placeholder = "Gantry Location" } })
                        </div>
                        <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-4">
                            <label for="IpAddress" class="form-label required">@VaaaN.MLFF.Libraries.CommonLibrary.Resource.Resourceen.IPAddress</label>
                            @Html.EditorFor(model => model.IpAddress, new { htmlAttributes = new { @class = "form-control", placeholder = "0.0.0.0" } })
                        </div>
                      
                        <div class="clearfix"></div>
                        <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-4" style="float:right">
                            <span id="lblErrors" style="color:red;"></span>

                            @if (TempData["Message"] != null && TempData["Message"].ToString() != "")
                            {
                                <span style="color:red;">@TempData["Message"]!</span>

                            }
                        </div>
                        <div class="clearfix"></div>
                        <div class="col-xs-10 col-sm-4 col-md-4 col-lg-4">
                            <button type="submit" class="btn btn-primary" onclick="return Validation();">Submit</button>&nbsp;&nbsp;<button id="buttonUserBack" type="button" class="btn btn-primary">Back</button>
                        </div>
                    </form>
                    <div class="clearfix"></div>
                </div>
            }
        </div>

    </div>

</div>
