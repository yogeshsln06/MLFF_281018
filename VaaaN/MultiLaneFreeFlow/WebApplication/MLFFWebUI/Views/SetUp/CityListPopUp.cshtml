@model VaaaN.MLFF.Libraries.CommonLibrary.CBE.CityCBE
@{
    Layout = null;
}
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

@using (Html.BeginForm("District", "SetUp", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <input type="hidden" id="OProvinceId" value="@ViewBag.OProvinceId" />
    <fieldset id="fildset">
        <div class="modal-body" style="height:400px; overflow-y:scroll;">
            <h5 class="c-mygrey-900 heading"><strong>Kabupaten/Kota </strong>Information<span></span></h5>
            <div class="mT-5">
                <div class="form-row">
                    <div class="form-group col-md-2 ">
                        @Html.LabelFor(model => model.CityId, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="form-group  col-md-4">
                        @Html.EditorFor(model => model.CityId, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="form-group col-md-2 required">
                        @Html.LabelFor(model => model.ProvinceId, htmlAttributes: new { @class = "form-label control-label col-md-4 col-sm-4  required" })
                    </div>
                    <div class="form-group  col-md-4">
                        @Html.DropDownList("ProvinceId", (IEnumerable<SelectListItem>)ViewBag.Province,"", new { @class = "form-control required select" })
                        @Html.ValidationMessageFor(model => model.ProvinceId, "", new { @class = "text-danger" })
                    </div>
                    
                </div>
                <div class="clearfix"></div>
                <div class="form-row">
                    <div class="form-group col-md-2 required">
                        @Html.LabelFor(model => model.CityName, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="form-group  col-md-4">
                        @Html.EditorFor(model => model.CityName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CityName, "", new { @class = "text-danger" })
                    </div> 
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </fieldset>
}
<div class="modal-footer">
    <div class="alert alert-warning" role="alert" id="warning">
    </div>
    <button type="button" class="btn btn-outline-danger" id="btnClose" data-dismiss="modal">Cancel</button>
    @*<button type="button" class="btn btn-outline-danger" id="btnCancel" onclick="ResetFildes();">Cancel</button>*@
    <button type="button" class="btn btn-outline-primary" onclick="SaveCityData('close')" id="btnSave">Save</button>
</div>

