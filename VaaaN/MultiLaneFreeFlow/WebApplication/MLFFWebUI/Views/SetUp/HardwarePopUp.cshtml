@model VaaaN.MLFF.Libraries.CommonLibrary.CBE.HardwareCBE
@{
    Layout = null;
}
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

@using (Html.BeginForm("Classification", "SetUp", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <input type="hidden" id="hfHardwarePosition" value="@ViewBag.hfHardwarePosition" />
    <input type="hidden" id="hfHardwareType" value="@ViewBag.hfHardwareType" />
    <fieldset id="fildset">
        <div class="modal-body" style="height:400px; overflow-y:scroll;">
            <h5 class="c-mygrey-900 heading"><strong>Hardware </strong>Information<span></span></h5>
            <div class="mT-5">
                <div class="form-row">
                    <div class="form-group col-md-2 ">
                        @Html.LabelFor(model => model.HardwareId, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="form-group col-md-4">
                        @Html.EditorFor(model => model.HardwareId, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="form-group col-md-2 required">
                        @Html.LabelFor(model => model.HardwareName, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="form-group col-md-4">
                        @Html.EditorFor(model => model.HardwareName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.HardwareName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="form-row">
                    <div class="form-group col-md-2 required">
                        @Html.LabelFor(model => model.HardwareType, htmlAttributes: new { @class = "control-label required" })
                    </div>
                    <div class="form-group col-md-4">
                        @Html.DropDownList("HardwareType", (IEnumerable<SelectListItem>)ViewBag.HardwareType,"", new { @class = "form-control required select" })
                        @Html.ValidationMessageFor(model => model.HardwareType, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-md-2 required">
                        @Html.LabelFor(model => model.HardwarePosition, htmlAttributes: new { @class = "control-label required" })
                    </div>
                    <div class="form-group col-md-4">
                        @Html.DropDownList("HardwarePosition", (IEnumerable<SelectListItem>)ViewBag.HardwarePosition," ", new { @class = "form-control required select" })
                        @Html.ValidationMessageFor(model => model.HardwarePosition,"", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="form-row">
                    <div class="form-group col-md-2 ">
                        @Html.LabelFor(model => model.ManufacturerName, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="form-group col-md-4">
                        @Html.EditorFor(model => model.ManufacturerName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ManufacturerName, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-md-2">
                        @Html.LabelFor(model => model.ModelName, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="form-group col-md-4">
                        @Html.EditorFor(model => model.ModelName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ModelName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="form-row">
                    <div class="form-group col-md-2 required">
                        @Html.LabelFor(model => model.IpAddress, htmlAttributes: new { @class = "control-label required" })
                    </div>
                    <div class="form-group col-md-4">
                        @Html.EditorFor(model => model.IpAddress, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.IpAddress, "", new { @class = "text-danger" })
                    </div>

                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </fieldset>
}
<div class="modal-footer">
    <div class="alert alert-warning" role="alert" id="warning">
    </div>
    <button type="button" class="btn btn-outline-danger" id="btnClose" data-dismiss="modal">Cancel</button>
    @*<button type="button" class="btn btn-outline-danger" id="btnCancel" onclick="ResetFildes();">Cancel</button>*@
    <button type="button" class="btn btn-outline-primary" onclick="SaveHardwareData('close')" id="btnSave">Save</button>
</div>

