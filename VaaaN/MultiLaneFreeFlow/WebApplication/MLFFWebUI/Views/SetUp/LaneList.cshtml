@{
    ViewBag.Title = "Lane List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="bgc-white bd bdrs-3 p-20 mB-20">
                <div class="form-row">
                    <div class="col-md-8">
                        <div class="mT-10">
                            <h4 class="c-mygrey-900 mB-20">Lane</h4>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mT-10">
                            <div class="gap-5 peers" style="float:right;overflow: visible !important;">
                                <div class="peer">
                                    <button type="button" class="btn cur-p btn-outline-primary" onclick="NewUser();">New</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <table id="tblLaneData" class="table table-striped table-bordered table-condensed table-hover" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th id="tblLaneData" style="text-align: center; vertical-align: middle; " rowspan="2">No</th>
                            <th style="text-align:center; vertical-align: middle;" rowspan="2">Lane Id</th>
                            <th style="text-align:center; vertical-align: middle;" rowspan="2">Lane Name</th>
                            <th style="text-align:center; vertical-align: middle;" rowspan="2">Gantry Id</th>
                            <th style="text-align:center; vertical-align: middle;" rowspan="2">Gantry Name</th>
                            <th style="text-align:center; vertical-align: middle;" colspan="2">Camera - Front</th>
                            <th style="text-align:center; vertical-align: middle;" colspan="2">Camera - Rear</th>
                            <th style="text-align:center; vertical-align: middle;" colspan="2">ETC Reader - Front</th>
                            <th style="text-align:center; vertical-align: middle;" colspan="2">ETC Reader - Rear</th>
                            <th style="text-align:center; vertical-align: middle;" rowspan="2">Lane Type</th>
                            <th style="text-align:center; vertical-align: middle;" rowspan="2" class="no-rt-border"></th>
                        </tr>
                        <tr>
                            <th style="text-align:center;" data-field="price">ID</th>
                            <th style="text-align:center;" data-field="price">Name</th>
                            <th style="text-align:center;" data-field="price">ID</th>
                            <th style="text-align:center;" data-field="price">Name</th>
                            <th style="text-align:center;" data-field="price">ID</th>
                            <th style="text-align:center;" data-field="price">Name</th>
                            <th style="text-align:center;" data-field="price">ID</th>
                            <th style="text-align:center;" data-field="price">Name</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script src="~/js/SetUp.js"></script>
<script>
    $(document).ready(function () {
        LaneDataList = @Html.Raw(Json.Encode(ViewData["LaneDataList"]));
        BindLaneData(LaneDataList);
    });
</script>

