@model IEnumerable<VaaaN.MLFF.Libraries.CommonLibrary.CBE.VehicleClassCBE>
@{
    ViewBag.Title = "Classification List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="bgc-white bd bdrs-3 p-20 mB-20">
                <div class="form-row">
                    <div class="col-md-8">
                        <div class="mT-10">
                            <h4 class="c-mygrey-900 mB-20">Classification</h4>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mT-10">
                            <div class="gap-5 peers" style="float:right;overflow: visible !important;">
                                <div class="peer">
                                    <button type="button" class="btn cur-p btn-outline-primary" id="btnNewCustomer" onclick="NewClassfification();">New</button>
                                </div>
                               
                                <div class="peer">
                                    <a class="btn cur-p btn-outline-primary" href='javascript:void(0);' onclick="reloadClassfificationData();">
                                        <span class='icon-holder'>
                                            <i class='c-black-500 ti-reload'></i>
                                        </span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <table id="tblVehicleClassData" class="table table-striped table-bordered table-condensed table-hover" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th id="tblVehicleClassDataTR">No</th>
                            <th>Classification Id</th>
                            <th>Classification Name</th>
                            <th class="no-rt-border"></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="~/js/SetUp.js"></script>
<script>
    $(document).ready(function () {
        VehicleClassJson = @Html.Raw(Json.Encode(ViewData["vehicleclassDataList"]));
        BindClassfificationData(VehicleClassJson);
    });
</script>
