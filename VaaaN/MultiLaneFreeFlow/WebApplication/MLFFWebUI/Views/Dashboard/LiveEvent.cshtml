<div class="container-fluid" style="overflow:hidden;">
    <div class="row">
        <div class="col-md-12">
            <div class="bgc-white bd bdrs-3 p-20 mB-20">
                <div class="form-row">
                    <div class="col-md-8">
                        <div class="mT-10">
                            <h4 class="c-mygrey-900 mB-20">Live Monitoring</h4>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mT-10">
                            <div class="gap-5 peers" style="float:right;overflow: visible !important;">
                                <div class="peer">
                                    <div class="col-md-12">
                                        @Html.DropDownList("ddlGantry", (IEnumerable<SelectListItem>)ViewBag.Gantry, new { @class = "form-control", @onchange = "filterData()" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <div class="table-responsive">
                            <table id="tblIKE" class="table table-condensed my-table-bordered">
                                <thead>
                                    <tr>
                                        <th style="text-align: center;" colspan="5">
                                            RFID
                                        </th>
                                    </tr>
                                    <tr>
                                        <th>
                                            Date Time
                                        </th>
                                        <th>
                                            Lane & Position
                                        </th>
                                        <th>
                                            EPC
                                        </th>
                                        <th>
                                            VRN
                                        </th>
                                        <th>
                                            Class
                                        </th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                    <div class="form-group col-md-4">
                        <div class="table-responsive">
                            <table id="tblANPRFront" class="table table-condensed my-table-bordered">
                                <thead>
                                    <tr>
                                        <th style="text-align: center;" colspan="4">
                                            Front ANPR
                                        </th>
                                    </tr>
                                    <tr>
                                        <th>
                                            Date Time
                                        </th>
                                        <th>
                                            Lane
                                        </th>
                                        <th>
                                            VRN
                                        </th>
                                        <th>
                                            Class
                                        </th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                    <div class="form-group col-md-4">
                        <div class="table-responsive">
                            <table id="tblANPRRear" class="table table-condensed my-table-bordered">
                                <thead>
                                    <tr>
                                        <th style="text-align: center;" colspan="4">
                                            Rear ANPR
                                        </th>
                                    </tr>
                                    <tr>

                                        <th>
                                            Date Time
                                        </th>
                                        <th>
                                            Lane
                                        </th>
                                        <th>
                                            VRN
                                        </th>
                                        <th>
                                            Class
                                        </th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
