@{
    ViewBag.Title = "Live Event";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*<link href="~/Scripts/le/Bootstrap/css/bootstrap.css" rel="stylesheet" />*@
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/fixedheader/3.1.2/css/fixedHeader.dataTables.min.css">
<link href="~/Scripts/bootstrap3/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery.freezeheader.js"></script>
<script src="~/js/liveEvents.js"></script>
<style>
    .main-content {
        padding: 10px 10px 10px !important;
    }

    thead {
        /*position: fixed !important;*/
        background: #f5f5f5 !important;
    }

