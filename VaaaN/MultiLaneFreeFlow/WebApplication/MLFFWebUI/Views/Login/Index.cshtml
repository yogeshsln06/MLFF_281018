@model VaaaN.MLFF.Libraries.CommonLibrary.CBE.UserCBE
@{
    Layout = null;
}

<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
    <title>MLFF Login</title>
    <link href="~/assets/admin/style.css" rel="stylesheet">
    <link href="~/assets/custom/custom.css" rel="stylesheet">
    <script>
        window.addEventListener('load', () => {
            const loader = document.getElementById('loader');
            setTimeout(() => {
                loader.classList.add('fadeOut');
            }, 300);
        });
    </script>
</head>
<body class="app">
    <div id="loader">
        <div class="spinner"></div>
    </div>
    <div class="peers ai-s fxw-nw h-100vh">
        <div class="d-n@sm- peer peer-greed h-100 pos-r bgr-n bgpX-c bgpY-c bgsz-cv" style="background-image:url(assets/static/images/bg.jpg)">
            <div class="pos-a centerXY">
                <div class="bgc-white bdrs-50p pos-r" style="width:120px;height:120px"><img class="pos-a centerXY" src="~/assets/static/images/SmartERPtext.png" alt="" style="width: 131px;"></div>
            </div>
        </div>
        <div class="col-12 col-md-4 peer pX-40 pY-80 h-100 bgc-white scrollable pos-r" style="min-width:320px">
            <h4 class="fw-300 c-grey-900 mB-40">Login</h4>
            <div>
                @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="form-group">
                        @Html.LabelFor(model => model.LoginName, htmlAttributes: new { @class = "text-normal text-dark required" })
                        @Html.EditorFor(model => model.LoginName, new { htmlAttributes = new { @class = "form-control ", placeholder = "", autofocus = "true" } })
                        @Html.ValidationMessageFor(model => model.LoginName, "", new { @class = "text-danger" })
                    </div>
                    <div class="clearfix"></div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "text-normal text-dark required" })
                        @Html.PasswordFor(model => model.Password)
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="clearfix"></div>
                    <div class="form-group">
                        <div class="peers ai-c jc-sb fxw-nw">
                            <div class="peer">
                                <div class="checkbox checkbox-circle checkbox-info peers ai-c">
                                    <input type="checkbox" value="remember-me" id="remember_me" name="inputCheckboxesCall" class="peer">
                                    <label for="remember_me" class="peers peer-greed js-sb ai-c">
                                        <span class="peer peer-greed">Remember Me</span>
                                    </label>
                                </div>
                            </div>
                            <div class="peer">
                                <button class="btn btn-primary" type="submit">Login</button>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="form-group">
                        @if (!string.IsNullOrEmpty(@TempData["Message"].ToString()))
                        {
                            <div class="alert alert-warning">

                                <strong>Warning!</strong> @TempData["Message"].ToString()
                            </div>
                        }
                    </div>


                }
            </div>
        </div>
    </div>
    <script type="text/javascript" src="~/assets/admin/vendor.js"></script>
    <script type="text/javascript" src="~/assets/admin/bundle.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#Password").addClass("form-control");
            if (localStorage.chkbx && localStorage.chkbx != '') {
                $('#remember_me').attr('checked', 'checked');
                $('#LoginName').val(localStorage.usrname);
                $('#Password').val('').focus();
            } else {
                $('#remember_me').removeAttr('checked');
                $('#LoginName').val('');
                $('#Password').val('');
            }

            $('#remember_me').click(function () {
                if ($('#remember_me').is(':checked')) {
                    localStorage.usrname = $('#LoginName').val();
                    localStorage.chkbx = $('#remember_me').val();
                } else {
                    localStorage.usrname = '';
                    localStorage.chkbx = '';
                }
            });
        });
    </script>
</body>
</html>
